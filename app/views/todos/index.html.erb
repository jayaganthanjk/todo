<h1>Listing todos</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Status</th>
      <th>Createdat</th>
      <th>Completedat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.task %></td>
        <td><%= todo.status %></td>
        <td><%= todo.createdAt %></td>
        <td><%= todo.completedAt %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
